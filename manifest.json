{
  "manifest_version": 3,
  "name": "LinkedIn Content Hider",
  "version": "1.0",
  "description": "Hide LinkedIn posts based on specified keywords.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
